# {{ tool_name }} Makefile
# Generated by Amplifier Microtask Pipeline

.PHONY: help run test clean

help: ## Show this help message
	@echo "{{ tool_name }} - {{ tool_description }}"
	@echo ""
	@echo "Available commands:"
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "  %-15s %s\n", $$1, $$2}'

run: ## Run the tool with default settings
	@python -m {{ module_name }}.cli process --help

process: ## Process input (specify INPUT=path OUTPUT=path)
	@if [ -z "$(INPUT)" ]; then \
		echo "Error: Please specify INPUT=<path>"; \
		exit 1; \
	fi
	@python -m {{ module_name }}.cli process --input "$(INPUT)" --output "$${OUTPUT:-output}"

status: ## Show processing status
	@python -m {{ module_name }}.cli status

test: ## Run tests
	@python -m pytest tests/

clean: ## Clean generated files
	@rm -rf output/
	@rm -rf __pycache__/
	@rm -rf .pytest_cache/
	@find . -name "*.pyc" -delete