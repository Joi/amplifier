{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Amplifier Log (v1.0.0)",
  "type": "object",
  "required": [
    "ts",
    "lvl",
    "schema",
    "event"
  ],
  "properties": {
    "ts": {
      "type": "string",
      "description": "ISO8601 timestamp with Z suffix"
    },
    "lvl": {
      "type": "string",
      "enum": [
        "DEBUG",
        "INFO",
        "WARN",
        "ERROR"
      ]
    },
    "schema": {
      "type": "object",
      "required": [
        "name",
        "ver"
      ],
      "properties": {
        "name": {
          "type": "string",
          "const": "amplifier.log"
        },
        "ver": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      }
    },
    "session_id": {
      "type": "string"
    },
    "request_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "span_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "parent_span_id": {
      "type": [
        "string",
        "null"
      ]
    },
    "event": {
      "type": "string"
    },
    "component": {
      "type": "string"
    },
    "module": {
      "type": [
        "string",
        "null"
      ]
    },
    "message": {
      "type": [
        "string",
        "null"
      ]
    },
    "duration_ms": {
      "type": [
        "number",
        "null"
      ]
    },
    "status": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "ok",
        "error",
        "denied",
        "skipped",
        null
      ]
    },
    "redaction": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "applied": {
          "type": "boolean"
        },
        "rules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "data": {
      "type": [
        "object",
        "null"
      ]
    },
    "error": {
      "type": [
        "object",
        "null"
      ]
    }
  },
  "additionalProperties": true
}